---
import { siteConfig } from "@/site.config";
const { settings } = siteConfig;

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
  group?: boolean;
  class?: string;
};

const {
  href,
  external,
  underline = true,
  group = false,
  class: className,
  ...rest
} = Astro.props;

const themeColor = settings?.accentColor || ''
const hoverColorClass = `hover:text-${themeColor}`;
---

<a
  href={href}
  target={external ? "_blank" : "_self"}
  
  class:list={[
    "block",
    className,
    hoverColorClass,
    group && "group",
  ]}
  {...rest}
  ><slot />
</a>