---
interface Props {
  style?: 'primary' | 'outline' | undefined
  size?: 'sm' | 'md' | 'lg' | undefined
  class?: string;
  [x: string]: any;
}

const {
  style = 'primary',
  size = 'md',
  class: className,
  ...rest
} = Astro.props

const sizes = {
  lg: "px-5 py-3",
  md: "px-4 py-2",
  sm: "px-3 py-1",
};

const styles = {
  outline: "border-2 border-primary-ui hover:border-active-ui hover:bg-secondary-bg",
  primary: "bg-secondary-bg hover:bg-secondary-bg border-2 border-primary-ui hover:border-active-ui", 
};
---
<span
  {...rest}
  class:list={[
    "items-center rounded-lg text-sm",
    sizes[size],
    styles[style],
    className,
  ]}
>
  <slot />
</span>