---
import PageLayout from "@/layouts/PageLayout.astro";
import Container from "@/components/layout/Container.astro";
import { Icon } from "astro-icon/components";
import LinkButton from "@/components/ui/LinkButton.astro";
import BackButton from '@/components/widgets/BackButton.astro';
import SocialLinks from "@/components/widgets/SocialLinks.astro";
---

<PageLayout
  title="About Me"
  description="Learn more about Astro Flexoki"
>
  <Container outerClass="max-w-4xl px-6 py-2 mx-auto h-full my-12">
    <BackButton
      title="Home"
      href="/"
    />
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-y-16 lg:grid-rows-[auto_1fr] lg:gap-y-12">
      <!-- Avatar -->
      <div class="lg:pl-20">
        <div class="p-2 lg:max-w-none max-w-xs">
          <img class="h-full object-cover rounded-lg rotate-3 aspect-square shadow-md" loading="lazy" src="https://picsum.photos/400/400?random=1.webp" alt="Being with nature.">
        </div>
      </div>
      <!-- About Me -->
      <div class="lg:order-first lg:row-span-2">
        <h1 class="text-4xl font-bold tracking-tight sm:text-5xl">This is Astro Flexoki</h1>
        <div class="mt-6 space-y-6 text-base text-flexoki-tx-2">
          <p class="text-lg text-ao-text-muted max-w-2xl">
            Astro Flexoki is a free, open-source blog theme built with ❤️ using
            <a href="https://astro.build" class="underline text-ao-text-accent">Astro</a>,
            <a href="https://tailwindcss.com" class="underline text-ao-text-accent">Tailwind CSS</a>,
            and the beautiful
            <a href="https://stephango.com/flexoki" class="underline text-ao-text-accent">Flexoki</a> color palette.
          </p>

          <p class="mt-6 text-lg text-ao-text-muted max-w-2xl">
            Designed for developers, tinkerers, and writers who care about performance and aesthetics,
            this theme is minimal, accessible, and production-ready. Use it for your personal blog,
            notes, or documentation site.
          </p>

          <p class="mt-6 text-lg text-ao-text-muted max-w-2xl">
            Maintained by <a href="https://github.com/ak0r" class="underline text-ao-text-accent">Amit K</a>.
            Contributions and feedback are always welcome.
          </p>
        </div>
      </div>
      <!-- Social Links -->
      <div class="lg:pl-20">
        <div class="flex flex-col gap-6">
          <h3 class="text-xl font-bold tracking-tight sm:text-2xl">Connect with me</h3>
          <SocialLinks />
          <div class="mt-4 border-t border-t-ui-primary pt-4 flex">
            <LinkButton href="mailto:abc@example.com" class="group flex text-sm font-medium transition">
              <Icon name="hugeicons:mail-01" class="size-6 hover:scale-120 transition-transform" />
              <span class="ml-4">Email Me</span>
            </LinkButton>
          </div>
        </div>
      </div>
    </div>
  </Container>
</PageLayout>